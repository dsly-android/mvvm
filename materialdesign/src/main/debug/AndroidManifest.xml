<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.android.dsly.materialdesign"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.android.dsly.common.base.BaseApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/design_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MaterialViewsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.Linkage2Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.Linkage1Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.LinkageActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.TabLayoutActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.DrawerLayoutActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.MdActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MaterialDesignActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SearchViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.CardViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.ChipActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.BottomSheetActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>