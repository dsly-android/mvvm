<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.htxtdshopping.htxtd.frame.widget.CoverVideoPlayer
            android:id="@+id/cvp_video"
            android:layout_width="match_parent"
            android:layout_height="405pt"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30pt"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="莫比不喜欢活着的人，布兰说请坐。布兰说请坐布兰说请坐布兰说请坐布兰说请坐布兰说请坐"
            android:textColor="@color/_363636"
            android:textSize="36pt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50pt"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30pt"
            android:paddingRight="30pt">

            <ImageView
                android:id="@+id/iv_label1"
                android:layout_width="81pt"
                android:layout_height="81pt"
                android:src="@drawable/icon_people"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16pt"
                android:layout_marginRight="30pt"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    tools:text="小包子"
                    android:textColor="@color/_363636"
                    android:textSize="28pt"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    tools:text="原创·2019-01-18"
                    android:textColor="@color/_999999"
                    android:textSize="24pt"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>