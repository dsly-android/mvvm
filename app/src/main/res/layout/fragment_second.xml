<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/v_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/_81D8CF"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_oss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:onClick="@{onClickListener}"
                    android:text="对象存储 OSS"/>

                <Button
                    android:id="@+id/btn_bugly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:onClick="@{onClickListener}"
                    android:text="检查是否有新的更新"/>

                <Button
                    android:id="@+id/btn_sophix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:onClick="@{onClickListener}"
                    android:text="阿里云的移动热修复"/>

                <Button
                    android:id="@+id/btn_x5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:onClick="@{onClickListener}"
                    android:text="x5内核"/>

                <Button
                    android:id="@+id/btn_login_and_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:onClick="@{onClickListener}"
                    android:text="友盟登录和分享"/>

                <Button
                    android:id="@+id/btn_bugly_crash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:onClick="@{onClickListener}"
                    android:text="bugly异常上报"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>