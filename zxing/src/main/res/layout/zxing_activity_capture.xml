<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <SurfaceView
            android:id="@+id/sv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.android.dsly.zxing.widget.ViewfinderView
            android:id="@+id/vv_scan_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_light_switch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/zxing_torch_off"
            app:layout_constraintBottom_toBottomOf="@id/vv_scan_area"
            app:layout_constraintLeft_toLeftOf="@id/vv_scan_area"
            app:layout_constraintRight_toRightOf="@id/vv_scan_area"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
